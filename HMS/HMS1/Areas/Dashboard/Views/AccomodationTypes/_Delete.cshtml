
@model HMS1.Areas.Dashboard.Models.ViewModel.AccomodationTypesActionModel


@if (Model != null)
{
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">

                    <span> Delete Accomodation Type</span>
               
            </h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">

            <form id="actionForm">
                <input type="hidden" name="ID" value="@Model.ID" />
            </form>
            <div class="alert alert-danger" role="alert">
               Are you sure you want to delete this Accomodation Type?
            </div> 
            
           
            

        </div>
        <div class="modal-footer">
            <button id="actionButton" type="button" class="btn btn-danger"> <i class="far fa-trash-alt"></i> Delete</button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>

        </div>
    </div>


}

<script>
    $("#actionButton").click(function () {
        var name = $("#name").val();
        var descr = $("#Description").val();

        $.ajax({
            url: '@Url.Action("Delete","AccomodationTypes")',
            type: "post",
            // data: $("#actionForm").serialize
            data: { Name: name, Description: descr },
        })
        .done(function (response) {
            
            if (response.Success)
            {
               window.location.href = "@Url.Action("Index", "AccomodationTypes")";
            }
            else {
                $(".errorDiv").html(response.Message)

            }
        });

    })

</script>
