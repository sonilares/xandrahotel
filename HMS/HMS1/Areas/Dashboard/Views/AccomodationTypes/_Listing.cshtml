
@model HMS1.Areas.Dashboard.Models.ViewModel.AccomodationTypesListModel
    





@if (Model != null && Model.AccomodationTypes != null && Model.AccomodationTypes.Count() > 0)
{

<table class="table table-striped">
    <thead>
        <tr>
            
            <th scope="col">    Name    </th>
            <th scope="col">    Description   </th>
            <th scope="col">    Actions     </th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model.AccomodationTypes)
        {
            <tr>

                <td>
                    @item.Name
                </td>
                <td>
                    @item.Description
                </td>
                <td>
                    <button type="button" data-href="@Url.Action("Action","AccomodationTypes", new { ID =  item.ID})" id="editButton" class="data-btn btn btn-success"  data-toggle="modal" data-target="#actionModal"> <i class="fas fa-edit mr-1"></i>  Edit    </button>
                    <button type="button" data-href="@Url.Action("Delete","AccomodationTypes", new { ID =  item.ID})" class="data-btn btn btn-danger" data-toggle="modal" data-target="#actionModal">   <i class="far fa-trash-alt mr-1"></i>  Delete  </button>

                </td>
            </tr>
        }
      
      
    </tbody>
</table>

}
else
{

    <div class="alert alert-warning" role="alert">
        Sorry!  No records exits yet!
    </div>
}